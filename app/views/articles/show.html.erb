<div class="d-flex justify-content-between align-items-start">
  <h1 class="mb-3"><%= @article.title %></h1>
  <div>
    <%= link_to raw('<i class="fa-solid fa-pen-to-square"></i>'), edit_article_path, class: 'btn btn-outline-secondary' %>
